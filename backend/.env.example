# =============================================================================
# KYAN JUKEBOX - BACKEND ENVIRONMENT (EXAMPLE)
# =============================================================================
# This is an example environment file for the Kyan Jukebox backend.
# Copy this file to .env and fill in the actual values for your environment.
# =============================================================================

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=8080
NODE_ENV=development

# =============================================================================
# SPOTIFY API INTEGRATION
# =============================================================================
# Spotify API credentials for track search and metadata
# Get these from https://developer.spotify.com/dashboard/
SPOTIFY_ID=
SPOTIFY_SECRET=
SPOTIFY_NEW_TRACKS_ADDED_LIMIT=3

# =============================================================================
# MOPIDY CONNECTION
# =============================================================================
# Mopidy WebSocket connection details
WS_MOPIDY_URL=
WS_MOPIDY_PORT=

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite database path (relative to backend directory)
SQLITE_PATH=
SQLITE_TIMEOUT=30000

# Connection timeout in milliseconds
IS_ALIVE_TIMEOUT=30000

# =============================================================================
# CONTENT FILTERING
# =============================================================================
# Allow explicit content in search results (true/false)
EXPLICIT_CONTENT=true

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================
# Cache album artwork duration in seconds
IMAGE_CACHE_EXPIRES=86400
