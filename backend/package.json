{
  "name": "@jukebox/backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:bun": "bun build src/index.ts --outdir dist --target node",
    "start": "bun --watch --env-file=./.env src/index.ts",
    "start:prod": "bun dist/index.js",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "validate": "bun run format:check && bun run type-check && bun run lint",
    "fix": "bun run format && bun run lint:fix",
    "test": "bun test",
    "test:ci": "bun test",
    "migrate:scan": "bun scripts/migrate-to-db-service.ts scan",
    "migrate:report": "bun scripts/migrate-to-db-service.ts report",
    "migrate:dry-run": "bun scripts/migrate-to-db-service.ts dry-run",
    "migrate:migrate": "bun scripts/migrate-to-db-service.ts migrate",
    "migrate:validate": "bun scripts/migrate-to-db-service.ts validate",
    "migrate:rollback": "bun scripts/migrate-to-db-service.ts rollback"
  },
  "dependencies": {
    "@types/inquirer": "^9.0.9",
    "body-parser": "^1.20.2",
    "dotenv": "catalog:",
    "invariant": "^2.2.4",
    "javascript-time-ago": "^2.5.9",
    "lodash": "catalog:",
    "mopidy": "^1.3.0",
    "node-cron": "^3.0.3",
    "socket.io": "catalog:",
    "spotify-web-api-node": "^5.0.2",
    "tslog": "^4.9.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/invariant": "^2.2.37",
    "@types/json-stringify-safe": "^5.0.3",
    "@types/lodash": "catalog:",
    "@types/node-cron": "^3.0.11",
    "@types/spotify-web-api-node": "^5.0.11",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@typescript-eslint/parser": "catalog:",
    "commander": "^12.1.0",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "eslint-plugin-prettier": "catalog:",
    "inquirer": "^9.3.8",
    "prettier": "catalog:",
    "shipit-cli": "^5.3.0",
    "shipit-deploy": "^5.3.0",
    "typescript": "catalog:"
  }
}
