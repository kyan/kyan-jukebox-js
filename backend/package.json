{
  "name": "@jukebox/backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "ts-node-dev -r dotenv/config --respawn --transpile-only src/index.ts",
    "start:prod": "node dist/index.js",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "validate": "npm run format:check && npm run type-check && npm run lint",
    "fix": "npm run format && npm run lint:fix",
    "test": "npm run validate && npm run jest",
    "test:ci": "npm run validate && npm run jest --coverage",
    "jest": "jest --forceExit --detectOpenHandles --verbose"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "invariant": "^2.2.4",
    "javascript-time-ago": "^2.5.9",
    "lodash": "^4.17.21",
    "mongoose": "^8.0.3",
    "mopidy": "^1.3.0",
    "node-cron": "^3.0.3",
    "socket.io": "^4.6.0",
    "spotify-web-api-node": "^5.0.2",
    "tslog": "^4.9.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/invariant": "^2.2.37",
    "@types/jest": "^29.5.11",
    "@types/json-stringify-safe": "^5.0.3",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.6",
    "@types/node-cron": "^3.0.11",
    "@types/spotify-web-api-node": "^5.0.11",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.1",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "jest-watch-typeahead": "^2.2.2",
    "mockingoose": "^2.16.2",
    "prettier": "^3.1.1",
    "shipit-cli": "^5.3.0",
    "shipit-deploy": "^5.3.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  }
}
