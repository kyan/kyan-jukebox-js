{
  "name": "@jukebox/backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:bun": "bun build src/index.ts --outdir dist --target node",
    "start": "bun --watch --env-file=../.env src/index.ts",
    "start:prod": "bun dist/index.js",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "validate": "bun run format:check && bun run type-check && bun run lint",
    "fix": "bun run format && bun run lint:fix",
    "test": "bun run validate && bun run jest",
    "test:ci": "bun run validate && bun run jest --coverage",
    "jest": "jest --forceExit --detectOpenHandles --verbose",
    "migrate:scan": "bun scripts/migrate-to-db-service.ts scan",
    "migrate:report": "bun scripts/migrate-to-db-service.ts report",
    "migrate:dry-run": "bun scripts/migrate-to-db-service.ts dry-run",
    "migrate:migrate": "bun scripts/migrate-to-db-service.ts migrate",
    "migrate:validate": "bun scripts/migrate-to-db-service.ts validate",
    "migrate:rollback": "bun scripts/migrate-to-db-service.ts rollback"
  },
  "dependencies": {
    "@types/inquirer": "^9.0.9",
    "better-sqlite3": "^12.4.1",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "invariant": "^2.2.4",
    "javascript-time-ago": "^2.5.9",
    "lodash": "^4.17.21",
    "mopidy": "^1.3.0",
    "node-cron": "^3.0.3",
    "socket.io": "^4.6.0",
    "spotify-web-api-node": "^5.0.2",
    "tslog": "^4.9.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/body-parser": "^1.19.5",
    "@types/invariant": "^2.2.37",
    "@types/jest": "^29.5.11",
    "@types/json-stringify-safe": "^5.0.3",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.6",
    "@types/node-cron": "^3.0.11",
    "@types/spotify-web-api-node": "^5.0.11",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "commander": "^12.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.1",
    "eslint-plugin-prettier": "^5.1.2",
    "inquirer": "^9.3.8",
    "jest": "^29.7.0",
    "jest-watch-typeahead": "^2.2.2",
    "prettier": "^3.1.1",
    "shipit-cli": "^5.3.0",
    "shipit-deploy": "^5.3.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.5.4"
  }
}
