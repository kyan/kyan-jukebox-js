# =============================================================================
# KYAN JUKEBOX - FRONTEND ENVIRONMENT CONFIGURATION
# =============================================================================
# This file contains environment variables specific to the React frontend.
# Copy this file to .env and fill in the actual values.
#
# Note: In React, only variables prefixed with REACT_APP_ are available
# in the browser. Other variables are only available during the build process.
# =============================================================================

# =============================================================================
# DEVELOPMENT SERVER CONFIGURATION
# =============================================================================
# Port for the React development server to listen on
PORT=3001

# Skip Create React App's preflight check (useful for monorepos)
SKIP_PREFLIGHT_CHECK=true

# =============================================================================
# BACKEND API CONNECTION
# =============================================================================
# These settings tell the frontend where to find the backend API server
# For local development, these defaults should work if you're running
# the backend on the standard port

# Backend API server hostname (without protocol)
REACT_APP_WS_URL=localhost

# Backend API server port
REACT_APP_WS_PORT=8080

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# These settings are used when building for production deployment
# Uncomment and configure for your production environment

# Production backend URL (without protocol)
# REACT_APP_WS_URL_PRODUCTION=your-api-domain.com

# Production backend port (usually 80 for HTTP or 443 for HTTPS)
# REACT_APP_WS_PORT_PRODUCTION=443

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================
# Set to 'true' to treat warnings as errors during build
# Useful for CI/CD pipelines
# CI=false

# Public URL where the app will be served from
# Leave empty for root path deployment
# PUBLIC_URL=

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Whether to automatically open the browser when starting dev server
# BROWSER=true

# Enable or disable source maps in development
# GENERATE_SOURCEMAP=true

# Fast refresh for React components (enabled by default)
# FAST_REFRESH=true
