{
  "name": "@jukebox/base",
  "version": "1.0.0",
  "description": "The Kyan office jukebox",
  "main": "index.js",
  "repository": "git@github.com:kyan/jukebox-js.git",
  "author": "Duncan Robertson <duncan@kyan.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "catalog": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "typescript": "^5.9.3",
    "@types/jest": "^29.5.11",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.1",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "lodash": "^4.17.21",
    "@types/lodash": "^4.14.202",
    "dotenv": "^16.3.1",
    "socket.io": "^4.6.0",
    "socket.io-client": "^4.2.0"
  },
  "trustedDependencies": [
    "better-sqlite3"
  ],
  "scripts": {
    "test:frontend": "bun run --filter @jukebox/frontend test:ci",
    "test:backend": "bun run --filter @jukebox/backend test:ci",
    "test": "bun run --workspaces test:ci",
    "build": "bun run --workspaces build",
    "dev": "bun run --workspaces start",
    "deps:why": "bun why",
    "deps:outdated": "bun outdated --recursive",
    "deps:update": "bun update --interactive",
    "deps:update-all": "bun update --recursive",
    "deps:audit": "bun audit",
    "deps:info": "bun info",
    "security:scan": "bun install --dry-run",
    "workspace:clean": "bun run --workspaces clean || true",
    "workspace:lint": "bun run --workspaces lint",
    "workspace:format": "bun run --workspaces format"
  },
  "dependencies": {
    "typescript": "^5.9.3"
  }
}
